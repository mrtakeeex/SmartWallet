<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aut.bme.hu.smartwallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true" >

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:label="@string/history_activity_name"
            android:theme="@style/AppTheme"
            android:name=".History"
            android:screenOrientation="portrait" />

        <activity android:label="@string/incomes_activity_name"
            android:theme="@style/IncomeTheme"
            android:name=".Incomes"
            android:screenOrientation="portrait" />

        <activity android:label="@string/spendings_activity_name"
            android:theme="@style/SpendingTheme"
            android:name=".Spendings"
            android:screenOrientation="portrait" />

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </application>

</manifest>